          name="FacebookAuthRequestProcessedContext"
          value="BTL.Application.Web.Infrastructure.Security.Authentications.Contexts.FacebookAuthentication.FacebookAuthRequestProcessedContext, BTL.Application.Web.Infrastructure"
          authRequestType="Facebook"
