          name="FacebookAuthRequestProcessingContext"
          value="BTL.Application.Web.Infrastructure.Security.Authentications.Contexts.FacebookAuthentication.FacebookAuthRequestProcessingContext, BTL.Application.Web.Infrastructure"          
          authRequestType="Facebook"
          processType="Processing"          
          returnResult="string"
          inputParameter="FacebookAuthRequestProcessingParameter" />
